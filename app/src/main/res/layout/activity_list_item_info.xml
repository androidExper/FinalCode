<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:layout_height="50dp" android:layout_width="200dp" android:layout_marginBottom="15dp" android:textAlignment="center" android:textSize="20dp" android:layout_gravity="center" android:id="@+id/food_name" android:layout_weight="1"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginBottom="20dp" android:layout_gravity="right" android:id="@+id/btn_reg" android:text="등록"/>


    -<LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="9">


    -<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginBottom="20dp">

    <TextView android:layout_height="match_parent" android:layout_width="wrap_content" android:textAlignment="center" android:textSize="20dp" android:text="칼로리" android:layout_marginRight="10dp" android:gravity="center"/>

    <ProgressBar android:layout_height="match_parent" android:layout_width="match_parent" android:progress="50" android:max="100" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

</LinearLayout>


    -<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginBottom="20dp">

    <TextView android:layout_height="match_parent" android:layout_width="wrap_content" android:textAlignment="center" android:textSize="20dp" android:layout_weight="1" android:text="탄수화물" android:layout_marginRight="10dp" android:gravity="center"/>

    <ProgressBar android:layout_height="match_parent" android:layout_width="match_parent" android:layout_weight="3" android:progress="50" android:max="100" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

</LinearLayout>


    -<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginBottom="20dp">

    <TextView android:layout_height="match_parent" android:layout_width="55dp" android:textAlignment="center" android:textSize="20dp" android:text="수분" android:layout_marginRight="10dp" android:gravity="center"/>

    <ProgressBar android:layout_height="match_parent" android:layout_width="match_parent" android:progress="50" android:max="100" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

</LinearLayout>


    -<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginBottom="20dp">

    <TextView android:layout_height="match_parent" android:layout_width="wrap_content" android:textAlignment="center" android:textSize="20dp" android:text="단백질" android:layout_marginRight="10dp" android:gravity="center"/>

    <ProgressBar android:layout_height="match_parent" android:layout_width="match_parent" android:progress="50" android:max="100" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

</LinearLayout>


    -<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginBottom="20dp">

    <TextView android:layout_height="match_parent" android:layout_width="55dp" android:textAlignment="center" android:textSize="20dp" android:text="지방" android:layout_marginRight="10dp" android:gravity="center"/>

    <ProgressBar android:layout_height="match_parent" android:layout_width="match_parent" android:progress="50" android:max="100" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

</LinearLayout>

</LinearLayout>

    <Button android:layout_height="50dp" android:layout_width="wrap_content" android:layout_gravity="center_horizontal" android:id="@+id/btn_back" android:text="메인 화면으로" android:padding="10dp" android:layout_marginTop="20dp"/>

</LinearLayout>